<Window x:Class="Hemuppgift_WPFtemplate.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">
    <DockPanel x:Name="mainDockpanel">

        <Button Content="Top" Margin="5" Height="30" Width="80" DockPanel.Dock="Top"/>
        <Button Content="Left" Margin="5" Height="30" Width="80" DockPanel.Dock="Left"/>
        <Button Content="Right" Margin="5" Height="30" Width="80" DockPanel.Dock="Right"/>
        <Button Content="Bottom" Margin="5" Height="30" Width="80" DockPanel.Dock="Bottom"/>
        <Button Content="Center" Margin="5" Height="30" Width="80" x:Name="btnCenter" Click="btnCenter_Click"/>

    </DockPanel>
</Window>
